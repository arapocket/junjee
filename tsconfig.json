{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist"
  },
  "include": ["dist/**/*", "src/**/*"]
}
